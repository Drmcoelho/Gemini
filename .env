# .env — projeto Gemini (carregado via direnv/.envrc ou hook zsh)
export GEMINI_BIN=gemini
export GEMX_HOME="$HOME/.config/gemx"
export GEMX_AUTOS="./automations"
export GEMX_OTHERS="./others.json"

# "Sempre" gemini-2.5-pro (override forçado)
export GEMX_FORCE_MODEL="gemini-2.5-pro"

# Modo estrito opcional
# export GEMX_STRICT=1

# Overrides rápidos (o config.json ainda é fonte de verdade; o wrapper aplica FORCE_MODEL)
export GEMX_MODEL="gemini-2.5-pro"
export GEMX_TEMP="0.2"

# Projeto (opcional, Workspace)
# export GOOGLE_CLOUD_PROJECT="seu-projeto"

# Aliases
alias gx="./gemx.sh menu"
alias gxc="./gemx.sh chat"
alias gxg="./gemx.sh gen"
alias gxv="./gemx.sh vision"
alias gxm="./gemx.sh models"
alias gxp="./gemx.sh project set"
alias gxa="./gemx.sh auto"
alias gxs="./gemx.sh others"
alias gxx="./gemx.sh passthrough --"
alias gxl="./gemx.sh login"
alias gxw="./gemx.sh whoami"
alias gxo="./gemx.sh logout"

# Exemplos rápidos
alias gxok='./gemx.sh gen --prompt "Diga OK em pt-br."'
alias gxsg='echo "Explique critérios de Sgarbossa" | ./gemx.sh gen'
